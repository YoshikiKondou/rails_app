<div class="main_container">
  <div class="infomation">
    <h2>スケジュール一覧</h2>
  </div>
  <form class="new_post" id="new_post" action="/posts" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="QghHwr76xvAme9kXW36G7MXb7LJ6xwaNCypYZhj9AvBk+YZfmyAD6bp+He1UxO9EtUFCKgh1MNAC1lpGdZsvIA==">
    <table>
      <tbody>
        <tr>
          <th>
            <label for="post_title">タイトル</label>
          </th>
          <td>
            <input type="text" name="post[title]" id="post_title" value="<%= @post.title %>">
          </td>
        </tr>
        <tr>
          <th>
            <label for="post_start_at">開始日</label>
          </th>
          <td>
            <input type="date" name="post[start_at]" id="post_start_at" value="<%= @post.start_at.to_s(:datetime_jp) %>">
          </td>
        </tr>
        <tr>
          <th>
            <label for="post_end_at">終了日</label>
          </th>
          <td>
            <input type="date" name="post[end_at]" id="post_end_at" value="<%= post.end_at.to_s(:datetime_jp) %>">
          </td>
        </tr>
        <tr>
          <th>
            <label for="post_is_all_day">終日</label>
          </th>
          <td>
            <input name="post[is_all_day]" type="hidden" value="0">
            <input type="checkbox" value="1" name="post[is_all_day]" id="post_is_all_day">
            終日の場合はチェックを入れます
          </td>
        </tr>
        <tr>
          <th>
            <label for="post_memo">スケジュールメモ</label>
          </th>
          <td>
            <textarea class="posts-content" name="post[memo]" id="post_memo"><%= @post.memo %></textarea>
          </td>
        </tr>
      </tbody>
    </table>
    <div>
      <ul>
        <li>
          <input type="submit" name="commit" value="スケジュールを新規登録する" data-disable-with="スケジュールを新規登録する">
        </li>
        <li>
          <%= link_to "スケジュール一覧に戻る", index_post_path(post) %>
        </li>
      </ul>
    </div>
  </form>
</div>