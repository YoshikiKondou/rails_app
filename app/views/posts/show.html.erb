<div class="main_container">
  <div class="information">
    <h2>スケジュール詳細</h2>
  </div>
  <table> 
    <tbody>
      <%= form_tag("/posts/update") do %>
      <tr>
        <th>タイトル</th>
        <td>
          <%= @post.title %>
        </td>
        </tr>
      <tr>
        <th>開始日</th>
        <td>
          <%= @post.start_at.to_s %>
        </td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td>
          <%= @post.created_at.to_s %>
        </td>
      </tr>
      <tr>
        <th>終日</th>
        <td>
          <% if @post.is_all_day %>
            <strong>○</strong>
          <% end%>
        </td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td>
          <pre>
            <%= @post.memo %>
          </pre>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <ul>
    <li>
      <%= link_to "スケジュール一覧に戻る", :posts %>
    </li>
    <li>
      <%= link_to "スケジュールを編集する", :edit_post %>
    </li>
    <li>
      <%= link_to "削除", :index, method: :delete, data: {confirm: "本当に削除しますか？"} %>
    </li>
  </ul>
</div>